# ============================================
# ROLEX RANDEVU SİSTEMİ - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.production or .env.development
# Never commit actual .env files to git!

# ==================== GOOGLE APPS SCRIPT ====================
# Your deployed Google Apps Script URL
# Get it from: Apps Script Editor → Deploy → Manage Deployments
VITE_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_DEPLOYMENT_ID/exec

# ==================== BASE URL ====================
# Your application's base URL (for GitHub Pages or custom domain)
VITE_BASE_URL=https://your-domain.com

# ==================== CLOUDFLARE TURNSTILE ====================
# Turnstile site key (public, safe to expose in frontend)
# Get it from: Cloudflare Dashboard → Turnstile
VITE_TURNSTILE_SITE_KEY=1x00000000000000000000AA

# ==================== DEBUG & FEATURES ====================
# Enable debug mode (console logs, verbose errors)
VITE_DEBUG=false

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# ==================== API CONFIGURATION ====================
# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Maximum retry attempts for failed requests
VITE_MAX_RETRIES=3

# ==================== APP VERSION ====================
# Application version (auto-incremented in CI/CD)
VITE_APP_VERSION=1.0.0
