# ============================================
# ROLEX RANDEVU SISTEMI - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.production or .env.development
# Never commit actual .env files to git!

# ==================== SUPABASE ====================
# Your Supabase project URL
# Get it from: Supabase Dashboard -> Settings -> API
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon Key (public, safe to expose in frontend)
# Get it from: Supabase Dashboard -> Settings -> API
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ==================== BASE URL ====================
# Your application's base URL (for GitHub Pages or custom domain)
VITE_BASE_URL=https://your-domain.com

# ==================== CLOUDFLARE TURNSTILE ====================
# Turnstile site key (public, safe to expose in frontend)
# Get it from: Cloudflare Dashboard -> Turnstile
VITE_TURNSTILE_SITE_KEY=1x00000000000000000000AA

# ==================== DEBUG & FEATURES ====================
VITE_DEBUG=false
VITE_ENABLE_ANALYTICS=false

# ==================== API CONFIGURATION ====================
VITE_API_TIMEOUT=30000
VITE_MAX_RETRIES=3

# ==================== APP VERSION ====================
VITE_APP_VERSION=2.0.0
