{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* JavaScript Support - Allow gradual migration */
    "allowJs": true,
    "checkJs": false,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    /* Modules */
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist-types",
    "removeComments": true,
    "noEmit": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Skip Lib Check */
    "skipLibCheck": true,

    /* Path Mappings */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Type Definitions */
    "types": ["vite/client"]
  },
  "include": [
    "*.ts",
    "*.js",
    "*.d.ts",
    "env.d.ts",
    "tests/**/*.ts",
    "tests/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-types",
    "coverage",
    "playwright-report",
    "test-results",
    "apps-script-backend.js"
  ]
}
